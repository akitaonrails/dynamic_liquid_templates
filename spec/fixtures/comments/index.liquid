<h1>Listing comments</h1>

<table>
  <tr>
    <th>Comment</th>
  </tr>

{% for comment in collection %}
  <tr>
    <td>{{ comment.comment }}</td>
    <td>{{ 'Show' | link_to: comment.show_path }}</td>
    <td>{{ 'Edit' | link_to: comment.edit_path }}</td>
  </tr>
{% endfor %}
</table>

<br />

<p>{{ 'New Comment' | link_to: new_object_path }}</p>